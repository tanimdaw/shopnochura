<%= form_tag sessions_path, :class => "form-horizontal", :role => "form", :method => :post do %>




  <!-- <div class="text-input-container">
    <%#= email_field_tag :email, params[:email], :placeholder => "Email Address", :class => 'text_field', :required => true %>
  </div> -->

  <div class="form-group">
    <%= label_tag :email, "Email", :class => "col-lg-2" %>
    <div class="col-lg-10">
      <%= email_field_tag :email, params[:email], :placeholder => "Email Address", 
      :class => 'form-control', :required => true %>
    </div>
  </div>


  <div class="form-group">
    <%= label_tag :password, "Password", :class => "col-lg-2" %>
    <div class="col-lg-10">
      <%= password_field_tag :password, params[:password], :placeholder => "Password", 
      :class => 'form-control', :required => true %>
    </div>
  </div>



  <!-- <div class="text-input-container">
    <%#= password_field_tag :password, params[:password], :placeholder => "Password", :class => 'text_field', :required => true %>
  </div> -->

  <div class="checkbox">
    <label>
      <%= check_box_tag :remember_me, "1", params[:remember_me] %> Remember me
    </label>
  </div>

  

  <%= submit_tag "Log in", :class => 'btn btn-success login-btn' %>
<% end %>

